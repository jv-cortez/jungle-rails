<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <%= form_for [@product, @product.reviews.new] do |form| %>
          <dt><%= form.label :description %></dt>
          <dd>
            <%= form.text_area :description %>          
          </dd>
          <dt><%= form.label :rating %></dt>
          <dd>
            <%= form.select :rating do %>
              <% [1, 2, 3, 4, 5].each do |c| %>
                <%= content_tag :option, c, value: c %>
              <% end %>
            <% end %>
          </dd>
          <dd><%= form.submit 'Submit Review' %></dd>
          <% end %>
          <dt>Rating</dt>
          <dd><%= @product.reviews.first.rating %></dd>
          <dt>Review</dt>
          <dd><%= @product.reviews.first.description %></dd>
        </dl>
      </div>
    </div>
  </article>

</section>
